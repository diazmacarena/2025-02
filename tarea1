#include <iostream>
using namespace std;

void merge(int*, int*);

int main() {
    int arr[] = {2,4,6,8,10,1,3,5,7,9};
    int* p = arr;
    int* q = &arr[5]; 
    merge(p, q);
    for (int i = 0; i < 10; i++) {
        cout << arr[i] << " ";
    }
    return 0;
}

void merge(int* p, int* q) {
    int* fin = q + (q - p);
    int* inicio = p;  
    
    while (p < q && q < fin) {
        if (*q < *p) {
            swap(*p, *q);
        }
        p++;
        if (p >= q) {
            p = inicio;  
            q++;
        }
    }
}
