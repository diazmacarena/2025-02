#include <iostream>
using namespace std;

void multiplicarMatrices(int* A, int* B, int* C, int r1, int c1, int c2) {
    for (int i = 0; i < r1; ++i)
        for (int j = 0; j < c2; ++j) {
            *(C + i * c2 + j) = 0;
            for (int k = 0; k < c1; ++k)
                *(C + i * c2 + j) += *(A + i * c1 + k) * *(B + k * c2 + j);
        }
}

int main() {
    int r1, c1, r2, c2;
    cout << "Filas y columnas de la primera matriz: ";
    cin >> r1 >> c1;
    cout << "Filas y columnas de la segunda matriz: ";
    cin >> r2 >> c2;

    if (c1 != r2) {
        cout << "No se pueden multiplicar las matrices." << endl;
        return 1;
    }

    int* A = new int[r1 * c1];
    int* B = new int[r2 * c2];
    int* C = new int[r1 * c2];

    cout << "Elementos de la primera matriz:\n";
    for (int i = 0; i < r1; ++i)
        for (int j = 0; j < c1; ++j)
            cin >> *(A + i * c1 + j);

    cout << "Elementos de la segunda matriz:\n";
    for (int i = 0; i < r2; ++i)
        for (int j = 0; j < c2; ++j)
            cin >> *(B + i * c2 + j);

    multiplicarMatrices(A, B, C, r1, c1, c2);

    cout << "Matriz resultado:\n";
    for (int i = 0; i < r1; ++i) {
        for (int j = 0; j < c2; ++j)
            cout << *(C + i * c2 + j) << " ";
        cout << endl;
    }

    delete[] A;
    delete[] B;
    delete[] C;

    return 0;
}
