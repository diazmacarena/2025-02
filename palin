#include <iostream>
using namespace std;

int strlen(char* c) {
    int count = 0;
    while (c[count] != '\0') {
        count++;
    }
    return count;
}

bool esPalindromo(char* cadena) {
    int len = strlen(cadena);
    const char* inicio = cadena;
    const char* fin = cadena + len - 1;
    while (inicio < fin) {
        if (*inicio != *fin)
            return false;
        inicio++;
        fin--;
    }
    return true;
}

int main() {
    char palabra[100];
    cout << "Ingrese una palabra: ";
    cin >> palabra;

    if (esPalindromo(palabra))
        cout << "Es palíndromo" << endl;
    else
        cout << "No es palíndromo" << endl;
    return 0;
}
