#include<iostream>
using namespace std;

void cocktail_sort(int* p, int* q)
{
    int* ini = p;
    int* fin = q;
    bool intercambio = true;
    
    while (ini < fin && intercambio) {
        
        intercambio = false;
        
        for (int* i = ini; i < fin; i++) {
            if (*i > *(i + 1)) {
                swap(*i, *(i + 1));
                intercambio = true;
            }
        }

        if (!intercambio) break;
        
      
        fin--;
        

        for (int* i = fin; i > ini; i--) {
            if (*i < *(i - 1)) {
                swap(*i, *(i - 1));
                intercambio = true;
            }
        }
        
        ini++;
    }
}

int main()
{
    int arr[] = {3, 4, 5, 6};
    int* p = arr;
    int* q = &arr[4]; 
    
    cocktail_sort(p, q);
    
    cout << "Sorted array: ";
    for (int i = 0; i < 4; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    return 0;
}
