#include <iostream>
using namespace std;

void FuncCad(char* cad, char* fin, function<void(char&)> lambda) {
    for(char* i = cad; i <= fin; ++i) {
        lambda(*i);}
}

int main() {
    char A[] = "Hola Mundo";
    
    auto upperCase = [](char& c) {
        if(c >= 97 && c <= 122) {
            c = c - 32;}
    };
    
    auto lowerCase = [](char& c) {
        if(c >= 65 && c <= 90) {
            c = c + 32;}
    };
    
    FuncCad(A, A + 9, upperCase);
    
    for(int i = 0; *(A+i) != '\0'; i++) {
        auto print = [&A](int x){cout << *(A+x);};
        print(i);
    }
    cout << endl;
  
    FuncCad(A, A + 9, lowerCase);
    
    for(int i = 0; *(A+i) != '\0'; i++) {
        auto print = [&A](int x){cout << *(A+x);};
        print(i);
    }
    cout << endl;
    
    return 0;
}
